{
  "name": "hoth",
  "version": "1.0.0",
  "description": "A Node.js framework based on fastify.",
  "main": "index.js",
  "repository": "https://github.com/cxtom/hoth.git",
  "author": "cxtom <chenxiao07@baidu.com>",
  "license": "MIT",
  "private": true,
  "bin": {
    "hoth": "dist/cli.js"
  },
  "engines": {
    "node": ">=12",
    "yarn": "^1.22.0"
  },
  "workspaces": [
    "packages/*",
    "example/*"
  ],
  "scripts": {
    "lint-staged": "lint-staged",
    "lint": "eslint src",
    "build:example": "yarn workspace hoth-quickstart run build ",
    "build": "lerna run build",
    "dev": "nodemon"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.20",
    "sonic-boom": "^1.3.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@babel/eslint-plugin": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@ecomfe/eslint-config": "^7.0.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "esbuild": "^0.8.39",
    "esbuild-node-tsc": "^1.2.0",
    "eslint": "^7.19.0",
    "fastify": "^3.11.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "nodemon": "^2.0.7",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
